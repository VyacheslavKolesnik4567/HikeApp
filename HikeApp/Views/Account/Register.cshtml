@model HikeApp.ViewModels.RegisterModel
@{
    ViewBag.Title = "Регистрация";
}
<div  style="margin-left: 20px">
<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Создание новой учетной записи.</h2>
</hgroup>
<script src="~/Scripts/Home/helpers.js"></script>


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "regForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Форма регистрации</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
            <li>
                @Html.LabelFor(m => m.FirstName)
                @Html.TextBoxFor(m => m.FirstName)
            </li>
            <li>
                @Html.LabelFor(m => m.LastName)
                @Html.TextBoxFor(m => m.LastName)
            </li>
            <li>
                @Html.LabelFor(m => m.Birthday)
                @Html.TextBoxFor(m => m.Birthday)
            </li>
            <li>
                @Html.LabelFor(m => m.Gender)
                <select id="regToHikeFormGender" name="Gender">
                    <option value="male">Мужской</option>
                    <option value="female">Женский</option>
                </select>
            </li>
            <li>
                @Html.LabelFor(m => m.Phone)
                @Html.TextBoxFor(m => m.Phone)
            </li>
        </ol>
    </fieldset>
    <input type="submit" value="Регистрация" />
}
    <br />
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
